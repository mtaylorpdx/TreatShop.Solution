@{
  Layout = "_Layout";
}

@model TreatShop.Models.Treat

<div class ="col-md-8 offset-md-2">
  <div class="card">
    <div class="card-body">
      @using (Html.BeginForm())
      {
        @Html.HiddenFor(model => model.TreatId)

        <h2>Add a flavor to the treat: @Html.DisplayFor(model => model.TreatName)</h2>
        <hr>

        @Html.Label("Current Flavor Options : ") @Html.DropDownList("FlavorId")
        <br>
        <input type="submit" value="Add treat" class="btn btn-outline-success my-2 my-sm-0">
      }
    </div>
  </div>
</div>