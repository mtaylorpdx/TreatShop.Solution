@{
  Layout = "_Layout";
}

@model TreatShop.Models.Treat

<div class ="col-md-8 offset-md-2">
  <div class="card">
    <div class="card-body">
      @using (Html.BeginForm())
      {
        @Html.Label("New Treat's Name: ")
        @Html.TextBoxFor(model => model.TreatName, new { @class = "form-control" , required = "required"})
        <br>
        <input type="submit" value="Add treat" class="btn btn-outline-success my-2 my-sm-0">
      }
    </div>
  </div>
</div>