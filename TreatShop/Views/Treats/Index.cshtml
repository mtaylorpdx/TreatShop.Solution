@{
  Layout = "_Layout";
}

@using TreatShop.Models;
@model List<TreatShop.Models.Treat>;

<hr>
<h1>Treats in the database: </h1>
<div class="card-treat" style="width:50%;">
  <div class="card-body">
    @if (@Model.Count ==0)
    {
      <h3>No treats have been added.</h3>
    }
    <hr>
    @foreach (Treat treat in Model)
    {
      <p>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })</p>
      <hr>
    }
  </div>
</div>

<p class="btn btn-outline-success my-2 my-sm-0">@Html.ActionLink("Create a new treat", "Create")</p>