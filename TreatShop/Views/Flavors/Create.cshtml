@{
  Layout = "_Layout";
}

@model TreatShop.Models.Flavor

<h4>Add a new flavor to the database</h4>
<hr />

<div class ="col-md-8 offset-md-2">
  @using (Html.BeginForm())
  {
      @Html.Label("Flavor Name:")
      @Html.TextBoxFor(model => model.FlavorName, new { @class = "form-control", required="required"})
  <br>
      @Html.Label("Select treat:")
      <br>
      @Html.DropDownList("TreatId")
  <br>
  <br>
      <input type="submit" value="Add new flavor" class="btn btn-outline-success my-2 my-sm-0"/>
  }
</div>