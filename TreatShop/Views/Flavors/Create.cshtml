@{
  Layout = "_Layout";
}

@model TreatShop.Models.Flavor

<div class ="col-md-8 offset-md-2">
  <div class="card">
    <div class="card-body">
      @using (Html.BeginForm())
      {
        @Html.Label("New Flavor Name:")
        @Html.TextBoxFor(model => model.FlavorName, new { @class = "form-control", required="required"})
        <br>
        @Html.Label("Select treat:")
        <br>
        @Html.DropDownList("TreatId")
        <br>
        <input type="submit" value="Create new flavor" class="btn btn-outline-success my-2 my-sm-0"/>
      }
    </div>
  </div>
</div>