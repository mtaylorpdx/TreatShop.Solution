@{
  Layout = "_Layout";
}

@model TreatShop.Models.Flavor

<h2>Flavor Details</h2>
<hr>
<h3>@Html.DisplayNameFor(model => model.FlavorName): @Html.DisplayFor(model => model.FlavorName)</h3>

@if(@Model.Treats.Count == 0)
{
  <p>This flavor does not belong to any type of treat</p>
}
else
{
  <h4>Treats attached to this flavor:</h4>
  <hr>
  @foreach(var join in Model.Treats)
  {
    <p>Treat name: @join.Treat.TreatName</p>
    <hr>
  }
}

<p class="btn btn-outline-success my-2 my-sm-0">@Html.ActionLink("Back to list", "Index")</p>
<p class="btn btn-outline-success my-2 my-sm-0">@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId })</p>
<p class="btn btn-outline-success my-2 my-sm-0">@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</p>